const mongoose = require('mongoose')

module.exports = () => {
  const schema = mongoose.Schema({
    name: {
      type: String,
      required: true
    }
  }, {
    timestamps: true
  })

  schema.methods.generateHello = (name) => {
    return 'Hello ' + name + ' !'
  }

  return mongoose.model('User', schema)
}
